<div class="row justify-content-lg-center g-3">

    <form method = "POST" class="col-lg-6 col-md-10 col-sm-10">
      <h5><%= title %> Business Contact Item</h5>
        <div class="input-group mb-3">
            <span class="input-group-text" id="name">Full Name</span>
            <input id ="name" type="text" class="form-control" placeholder="Full Name" aria-label="Name" aria-describedby="Item Name"
            name="name" value="<%=contact.FullName %>" required>
          </div>  
          
          <div class="input-group mb-3">
            <span class="input-group-text" id="name">Email Address</span>
            <input id ="EmailAddress" type="text" class="form-control" placeholder="Email Address" aria-label="Email address" aria-describedby="Item Email Address"
            name="email address" value="<%=contact.EmailAddress %>" required>
          </div>

          <div class="input-group mb-3">
            <span class="input-group-text" id="name">Contact number</span>
            <input id ="EmailAddress" type="text" class="form-control" placeholder="Contact Number" aria-label="Contact Number" aria-describedby="Item Contact Number"
            name="email address" value="<%=contact.ContactNumber %>" required>
          </div>

          <button type="submit" class="btn btn-primary" id="editButton"><i class="fas fa-edit fa-lg"></i> Update</button>

    </form>
</div>
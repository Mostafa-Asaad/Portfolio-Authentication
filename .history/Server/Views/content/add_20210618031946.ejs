<div class="row justify-content-lg-center g-3">
    

    <form method = "POST" class="col-lg-6 col-md-10 col-sm-10">
        <h3 style="color:white"> Create Business Contact</h3>
        <div class="input-group mb-3">
            <span class="input-group-text" id="name">Full Name</span>
            <input id ="FullName" type="text" class="form-control" placeholder="Full Name" aria-label="Full Name" aria-describedby="Full Name"
            name="FullName" value="<%=contact.FullName %>" required>
          </div>  
          
          <div class="input-group mb-3">
            <span class="input-group-text" id="name">Email Address</span>
            <input id ="EmailAddress" type="text" class="form-control" placeholder="Email Address" aria-label="Email Address" aria-describedby="Email Address"
            name="EmailAddress" value="<%=contact.EmailAddress %>" required>
          </div>

          <div class="input-group mb-3">
            <span class="input-group-text" id="name">Contact number</span>
            <input id ="ContactNumber" type="text" class="form-control" placeholder="Contact Number" aria-label="Contact Number" aria-describedby="Contact Number"
            name="ContactNumber" value="<%=contact.ContactNumber %>" required>
          </div>

          <button type="submit" class="btn btn-primary" id="editButton"><i class="fas fa-edit fa-lg"></i> Create</button>
          <a href="/contact-list" id="cancelButton" type="button" class="btn btn-warning"><i class="fas fa-undo"></i> Cancel</a>

    </form>
</div>
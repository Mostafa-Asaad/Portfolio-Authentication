<div class="row">
    <div class="col"></div>
    <div class="col-10">
    <h1 style="color:white"> Business Contact List</h1>
    
    <!-- create contact button-->
    <div style= "margin-top:50px;">
    <% if(displayName) { %>
           <a href="/contact-list/add" id="addButton" class="btn btn-primary mb-1"><i class="fas fa-plus-circle"></i> Add Business Contact</a>
        <% } %>
        <!-- Table goes here-->
      <div class="col border border-bottom rounded-lg bg-light">
        <table class="table table-striped table-bordered table-hover table-sortable ">
        <thead class="table-dark">
              <tr>
                <th scope="col">#</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Email Address</th>
                <th scope="col">Contact Number</th>
                <th scope="col">Company</th>
                <% if(displayName) { %>
                   <th></th>
                   <th></th>
                <% } %>
              </tr>
            </thead>
            <tbody>

                <!-- Repeatable Row Template-->
                
                <% for(let count = 0; count < contact.length; count++) { %>

                <tr>
                    <th scope="row"><%= count + 1 %></th>
                    <td><%= contact[count].FirstName %></td>
                    <td><%= contact[count].LastName %></td>
                    <td><%= contact[count].EmailAddress %></td>
                    <td><%= contact[count].ContactNumber %></td>
                    <td><%= contact[count].Company %></td>

                    <!-- Add buttoms-->

                      <% if(displayName) { %>
                      <td class="text-center"><a href="/contact-list/edit/<%= contact[count]._id %>" class="btn btn-primary btn-sm edit"><i class="fas fa-edit fa-sm"></i> Update</a></td>
                      <td class="text-center"><a href="/contact-list/delete/<%= contact[count]._id %>" class="btn btn-danger btn-sm delete"><i class="fas fa-trash-alt fa-sm"></i> Delete</a></td>
                    <% } %> 
                    
                </tr>

              <% } %>

            </tbody>
          </table>
      </div>    
    </div>
    </div>
  <div class="col"></div>
    
</div>
